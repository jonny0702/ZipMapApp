<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    tools:context=".InputZipCode">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/input_bkg"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:translationZ="10dp"
        >

        <EditText
            android:id="@+id/editText"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:minHeight="48dp"
            android:background="@drawable/input_map_custom"
            android:drawableStart="@drawable/baseline_map_24"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:hint="@string/zipPlaceHolder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="number"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="10dp"
            >

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#ffff"
                android:src="@drawable/baseline_send_24"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="-3dp"
                android:contentDescription="@string/ButtonImage"
                />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>